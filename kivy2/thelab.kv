<WidgetLayoutE>:
   cols:2
   #size_hint:1,1
   anchor_x:"center"
   anchor_y:"center"

   ToggleButton:
      text:"hii"
      size_hint:1,2
      color:"black"
      font_size:"25dp"
      pos: "300dp","300dp"
      on_state:root.on_toggle_click(self)


   Label:

      text:root.my_text
      font_name:"fonts/Lcd.ttf"
      font_size:"25dp"
      #color:(0,0,255)
      #pos:"300dp",'10dp'
   Switch:
      id:switch
      active:True
      on_active:root.switch_on_active(self)


   BoxLayout:
      orientation:"vertical"
      Label:
         id:label_slider
         text:str(int(slider.value))
         font_name:"fonts/Lcd.ttf"
         font_size:"25dp"
         #color:(0,0,255)
        # pos:"300dp",'10dp'
      Slider:
         id:slider
         size_hint:1,2
         value:50

         max:100
         disabled:not switch.active

         on_value:root.on_slider_value(self)

   TextInput:
      id:my_text_input
      size_hint:1,1
      #text_size="50dp"
      text:"foo"
      multiline:False
      on_text_validate:root.on_text_validate(self)
   Label:
      text:root.input_text
      size_hint:1,1
      font_name:"fonts/Lcd.ttf"
      font_size:"20dp"
      #color:(0,0,255)
      pos:"300dp",'10dp'

   ProgressBar:
      value:int(slider.value)
      max:100
      min:0








